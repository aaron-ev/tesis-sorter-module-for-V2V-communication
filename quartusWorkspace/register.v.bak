/*
*	Description: Register of n bits. Default n = 8 bits. 
*	Author: Aar√≥n Escoboza Villegas
*/

module register#(parameter n = 8)
(
	input clk,
	input rst,
	input [n-1:0]din, 
	output reg [n-1:0] dout
);

always@(posedge clk,negedge reset) 
begin 
	if (!rst)
		dout <= 0;
	else 
		dout <= din;
end
endmodule